{
  "manifest_version": 2,
  "name": "cookie 搬运工",
  "version": "1.0",
  "description": "最简单的Chrome插件demo，需要快速做一个简单的插件时可以基于这个仓库开发",
  "author": "TY-xie",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "content-script.js"
  ]
}
